<h1><%= @project.title %></h1>
<p><%= @project.description %></p>
<p>Goal: $<%= @project.goal %></p>
<p>Deadline: <%= @project.end_date %></p>
<p>Raised: <%= @project.total %></p>
<p>Time Left: <%= distance_of_time_in_words(Time.now, @project.end_date) %>

<h3>Pledges for <%= @project.title %></h3>

<% @project.pledges.each do |pledge| %>
  <p>
    <%= pledge.amount %>
  </p>
<% end %>


<p><%= link_to "Make a Pledge", new_project_pledge_path(@project, @pledge) %></p>

<p><%= link_to "Edit Project", edit_project_path(@project) %></p>

<p><%= link_to "Back to Projects", projects_path %></p>
