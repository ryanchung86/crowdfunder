<%= form_for(@project) do |f| %>


  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<%= f.label :user_id %>
<%= f.hidden_field :user_id, :value => current_user.id %>

<div class="field">
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
</div>

<div class="field">
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
</div>

<div class="field">
  <p>
    <%= f.label :goal %><br>
    <%= f.number_field :goal %>
  </p>
</div>

<div class="field">
  <p>
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date %>
  </p>
</div>

<h2>Rewards</h2>

<%= f.fields_for :rewards, Reward.new do |reward_fields| %>
  <div class="field">
    <p>
      <%= reward_fields.label :benchmark %>
      <%= reward_fields.number_field :benchmark %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= reward_fields.label :description %>
      <%= reward_fields.number_field :description %>
    </p>
  </div>
<% end %>

<p><%= f.submit %></p>

<% end %>
