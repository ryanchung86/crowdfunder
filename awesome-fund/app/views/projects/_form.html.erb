<%= form_for(@project) do |f| %>

<div class="field">
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
</div>

<div class="field">
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
</div>

<div class="field">
  <p>
    <%= f.label :goal %><br>
    <%= f.number_field :goal %>
  </p>
</div>

<div class="field">
  <p>
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date %>
  </p>
</div>

<p><%= f.submit %></p>

<% end %>
